{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es6",
		"jsx": "react",
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF",
		"noImplicitThis": true,
		"pretty": true,
		"strict": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": [],
		"declaration": true,
		"declarationDir": "./dist"
	},
	"files": ["./src/index.ts", "./example/app.tsx", "./mocks/index.ts"],
	"exclude": ["./node_modules/*"]
}
